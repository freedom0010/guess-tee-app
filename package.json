{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": [
      "hardhat"
    ]
  },
  "include": [
    "./scripts",
    "./test",
    "./typechain-types",
    "./hardhat.config.ts"
  ],
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@oasisprotocol/sapphire-hardhat": "^2.22.2",
    "@types/node": "^24.1.0",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.1",
    "hardhat-sourcify": "^0.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@oasisprotocol/sapphire-contracts": "^0.2.14",
    "dotenv": "^17.2.1"
  }
}
